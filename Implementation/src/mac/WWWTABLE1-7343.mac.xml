	set YNOSORT=$get(^WWWSOR(YUSER_"TEMP","NOSORT"))      ;BEC;27293;04.02.05
	
	set YHEADSIZE=$get(^WWWSOR(YUSER_"TEMP","HEADSIZE"))
	set YHEADFIX=$get(^WWWSOR(YUSER_"TEMP","HEADFIX"))
