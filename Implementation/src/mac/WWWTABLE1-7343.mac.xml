				for YI=1:1:YCOL {
					write YCR
					write "<td nowrap id=""line"_YROW_"_"_YI_""" name=""field"_YLFN_"_"_YI_""""
					if (YLEFT'="")  && $find(","_YLEFT_",",","_YI_",") write " align=left"
					if (YRIGHT'="") && $find(","_YRIGHT_",",","_YI_",") {
						write " align=right"
					} else {
						write " align=center"             ; FIXME : can this over-ride align=left above?
					}
					if $get(YDDSATZ)'="" {
