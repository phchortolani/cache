						if $piece(YVOR,Y,83)=""  if YDDSATZ#2=0 write " bgcolor="_YGRAY
						if $piece(YVOR,Y,83)'="" if YDDSATZ#2=1 write " class=""white"""  ;FIS;CUSTOMER CSS STYLESHEET;08.12.04;26564
