					} else {
						write $$^WWWTRANSLATE($piece($piece(YFELD,Y,YI),"@STYLE@",1)," ",strNBSP)
					}
					if YI=YSORTBY write "</b>"
					
					write $$LINK(0)
					write $$EVENTTYPE()
					
					write "&nbsp;"
					write YCR,"</font>"
					write "</td>",YCR
				}
				write "</tr>"
				write YCR
			}
		}
