	<body>
		<form id="form" method="post" action="" enctype="multipart/form-data">
			<div class="container-fluid" style="margin:2px;">
				<div class="row">
					<div class="col-md-2">Data do Exame:</div>
					<div class="col-md-7"><div id="campoDataExame"></div></div>
				</div>
				<div class="row">
					<div class="col-md-2">Exame:</div>
					<div class="col-md-10"><div id="campoExame"></div></div>
				</div>
				<div class="row">
					<div class="col-md-2"></div>
					<div class="col-md-10">
						<label for='input-file' style="  background-color: #337AB7;border-radius: 5px;color: #fff;margin: 10px;padding: 6px 20px">Selecionar um arquivo</label>
					  <input id='input-file' type='file' value=''  name="input-file" />
  					<span id='file-name'></span>					
					</div>
				</div>
				<br><br><br>
				<div style="text-align:center;">
					<div id="botaoEnviar"></div>
					<div id="botaoCancelar"></div>
				</div>
				<input type="hidden" id="dataExame" name="dataExame">
				<input type="hidden" id="exame" name="exame">
				<input type="hidden" id="passagem" name="passagem" value="#($get(%request.Data("passagem",1)))#">
			</div>
		</form>
	</body>
	
	<script language="javascript">
    var urlPreparacao = '#(URLPreparacao)#';

		DevExpress.config({decimalSeparator: ",",thousandsSeparator: "."});
		DevExpress.localization.locale("pt");
	
		campoData = $("#campoDataExame").dxDateBox().dxDateBox("instance");

		campoExame = $("#campoExame").dxTextBox(
		{}).dxTextBox("instance");

		var $input    = document.getElementById('input-file'),
		    $fileName = document.getElementById('file-name');

		$input.addEventListener('change', function(){
		  $fileName.textContent = this.value;
		});
	
		$("#botaoEnviar").dxButton({
			text: "Salvar",
			type: "success",
			onClick: function(){
				$("#dataExame").val(campoData.option("text"))
				$("#exame").val(campoExame.option("value"))
				if ($("#dataExame").val() == "") {
					DevExpress.ui.notify("Informe a data do exame.", "warning", 4000);
					return;
				}
				if ($("#exame").val() == "") {
					DevExpress.ui.notify("Informe o tipo do exame.", "warning", 4000);
					return;
				}
				if ($("#input-file").val() == "") {
					DevExpress.ui.notify("Selecione o arquivo.", "warning", 4000);
					return;
				}
				$("#form").submit();
			}
		});
		
		$("#botaoCancelar").dxButton({
			text: "Fechar",
			type: "default",
			onClick: function(){
				window.close();
			}
		});
	</script>
	
</html>
